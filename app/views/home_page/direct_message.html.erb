
<%= stylesheet_link_tag 'message_partner', :media => "all" %>

 
  <div class="container">
   
    <%= render 'shared/header_and_drawer' %>
    <h1 id="titel">Message Partner</h1>
    
   
    <main>
      <% @message_partners.each do |message_partner| %>
        <div id = "message-partner">
          <% if message_partner.user.image? %>
              <%= image_tag message_partner.user.image.thumb.url, class: "user-icon" ,id: "user-photo"%>
          <% else %>
              <%= image_tag 'undraw_male_avatar_323b.svg', alt: "user-icon", size: "200", class: "user-icon",id: "user-photo" %>
          <% end %>
          <%= link_to "#{message_partner.user.name}とのトークルームへ移動", "/rooms/#{message_partner.room_id}" , id: "talk-room" %>
        </div>
     
      <% end %>
    </main>
    <%= render 'shared/footer' %>
    
  </div>

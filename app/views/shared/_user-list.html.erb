<% @users.each do |user| %>
  <div class="users">
    <img id="user-photo" onclick="location.href='<%= user_path(user)%>'" src="../../assets/undraw_male_avatar_323b.svg"> 
    <div id="name-intoroduction">
      <h1><%= link_to user.name, user_path(user) %></h1>
      <h2>自己紹介</h2>
      <%= user.intoroduction %>
    </div>
    <% unless current_user?(user) %>
      <div class="follow_form">
        <% if current_user.following?(user) %>
          <%= form_with(model: current_user.active_relationships.find_by(followed_id: user.id),
                    html: { method: :delete }, local: true) do |f| %>
          <%= f.submit "Unfollow", class: "btn btn-default" %>
          <% end %>
        <% else %>
          <%= form_with(model: current_user.active_relationships.build, local: true) do |f| %>
            <div><%= hidden_field_tag :followed_id, user.id %></div>
            <%= f.submit "Follow", class: "btn btn-primary" %>
          <% end %>
        <% end %>
      </div>
    <% end %>
  </div>
<% end %>



      
  
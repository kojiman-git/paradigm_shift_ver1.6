
<%= stylesheet_link_tag 'new', :media => "all" %>
<%= stylesheet_link_tag 'top', :media => "all" %>
  <div class="container">
    <h1 id="app-titel">Paradigm Shift</h1>
    <h1 id="titel">Sign up</h1>
    <main>
      
      <div class="row">
        <div class="col-md-6 col-md-offset-3">
          <%= form_with(model: @user, local: true, class: 'sign-area') do |f| %>
            <%= render 'shared/error_messages', object: f.object %>
            <%= f.label :name %>
            <%= f.text_field :name, class: 'form-control' %>

            <%= f.label :email %>
            <%= f.email_field :email, class: 'form-control' %>

            <%= f.label :password %>
            <%= f.password_field :password, class: 'form-control' %>

            <%= f.label :password_confirmation, "Confirmation" %>
            <%= f.password_field :password_confirmation, class: 'form-control' %>

            <%= f.submit "Create my account", class: "btn form-control" %>
            
          <% end %>
        </div>
      </div>
    </main>
   <h1 id="app-titel">世界が変わる瞬間</h1>
  </div>

  


  


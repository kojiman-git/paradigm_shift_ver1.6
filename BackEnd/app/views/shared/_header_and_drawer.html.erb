<header>
<% if logged_in? %>
  <% if current_user.image? %>
    <label for="menu" class="open"><%= image_tag current_user.image.thumb.url, class: "user-icon " %></label>
  <% else %>
    <label for="menu" class="open"><%= image_tag 'undraw_male_avatar_323b.svg', alt: "user-icon", size: "200", class: "user-icon" %></label>
  <% end %>
<% else %>
  <label for="menu" class="open"><img src="../../assets/undraw_profile_pic_ic-5-t.svg"></label>
<%end%>
  <h1 class="app_name">Paradigm Shift</h1>
  <h1></h1>
</header>

<input id="menu" type="checkbox" />
<label for="menu" class="back"></label>

<aside>
        <div id="user-container">
          <div id="name-container">
            <% if current_user.image? %>
              <%= image_tag current_user.image.thumb.url,class: "user-icon", id: "user-photo" %>
            <% else %>
              <%= image_tag 'undraw_male_avatar_323b.svg', alt: "user-icon", size: "200", class: "user-icon" %>
            <% end %>
              <h6 id="user-name"><%= current_user.name %></h6>
            <label for="menu" class="close">Ã—</label>
          </div>
          <div id="follow-container">
            <div class="stats">
              <a href="<%= following_user_path(current_user) %>">
                <strong id="following" class="stat">
                  <%= current_user.following.count %>
                </strong>
                following
              </a>
              <a href="<%= followers_user_path(current_user) %>">
                <strong id="followers" class="stat">
                  <%= current_user.followers.count %>
                </strong>
                followers
              </a>
            </div>
            <%# <h6 onclick="location.href='../head_icon/follows_list'"> xxx follow</h6>
            <h6 onclick="location.href='../head_icon/followers_list'"> yyy followers</h6> %>
          </div>
        </div>
        <div id="drawer-menu">
          <h3><%= link_to "My profile", user_path(current_user) %></h3>
          <h3><%= link_to "Quiz list", head_icon_quiz_list_path %></h3>
          <h3><%= link_to "Description", head_icon_app_detailed_description_path %></h3>
          <h3><%= link_to "Log out", logout_path, method: :delete %></h3>
          
        </div>
</aside>